<div class="container" style="display: flex; flex-direction: column; min-height: 70vh; max-width: 600px; margin: 0 auto; padding: 20px;">
  <h2>Transferencia</h2>

  <% if @error %>
    <div class="alert alert-error" style="margin-bottom: 10px;"><%= @error %></div>
  <% end %>

  <% if @success %>
    <div class="alert alert-success" style="margin-bottom: 10px;"><%= @success %></div>
  <% end %>

  <div class="form-container" style="flex-grow: 1;">
    <form action="/transfer" method="post" class="money-form" style="display: flex; flex-direction: column; gap: 10px;">
      <div class="form-group" style="margin-bottom: 10px;">
        <label for="dest_alias">Elegir contacto:</label>
        <select name="dest_alias" id="dest_alias" required>
          <% @contacts.each do |contact| %>
            <option value="<%= contact.alias %>"><%= contact.user.name %> - <%= contact.alias %></option>
          <% end %>
        </select>
      </div>

      <div class="form-group" style="margin-bottom: 10px;">
        <label for="amount">Monto:</label>
        <input type="number" name="amount" id="amount" min="0.01" step="0.01" required>
      </div>

      <div class="form-actions">
        <input type="submit" value="Transferir" style="width: 100%;">
      </div>
    </form>
  <div class= "acciones">
     <form action="/transfer/otro" method="get">
      <button type="submit" style="width: 100%;">Transferir a nueva cuenta</button>
    </form>
    
  </div>
   
  </div>

  
</div>
<div class="back-form button">
    <form action="/home" method="get">
        <button type="submit"> Volver al menu </button>
    </form>
</div>
  