
<div class="container">
  <h2>Transferir Dinero</h2>
  
  

  <% if @error %>
    <div class="alert alert-error"><%= @error %></div>
  <% end %>

  <% if @success %>
    <div class="alert alert-success"><%= @success %></div>
  <% end %>

  <div class="form-container">
    <form action="/transfer" method="post" class="money-form">
      <div class="form-group">
        <label for="dest_alias"> Alias del destinatario: </label>
        <input type="text" name="dest_alias" id="dest_alias" required>

        <label for="amount">Monto a transferir (en pesos):</label>
        <input type="number" name="amount" id="amount" min="0.01" step="0.01"required>

        <p><strong>Saldo actual:</strong> <%= (@user.account.total_balance.to_f / 100).round(2) %> pesos</p>

      </div>

      <div class="form-actions">
        <input type="submit" value="Ingresar">
      </div>
    </form>

  </div>
</div>

<div class="back-form button">
    <form action="/home" method="get">
        <button type="submit"> Volver al menu </button>
    </form>
</div>
